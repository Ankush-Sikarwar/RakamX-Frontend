{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": false,
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
